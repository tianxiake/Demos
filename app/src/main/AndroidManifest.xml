<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.runningsnail.demos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.bottomnavigation.BottomWayOneActivity" />
        <activity android:name=".activity.ImageSwitcherActivity" />
        <activity android:name=".activity.bottomnavigation.BottomWayTwoActivity" />
        <activity android:name=".activity.viewanimation.ScaleAnimationActivity" />
        <activity android:name=".activity.viewanimation.AlphaAnimationActivity" />
        <activity android:name=".activity.viewanimation.RotateAnimationActivity" />
        <activity android:name=".activity.viewanimation.TranslateAnimationActivity" />
        <activity android:name=".activity.viewanimation.SetAnimationActivity" />
        <activity android:name=".activity.bottomnavigation.BottomWayThreeActivity" />
        <activity android:name=".activity.bottomnavigation.BottomWayFourActivity" />
        <activity android:name=".activity.viewanimation.SplashActivity" />
        <activity android:name=".activity.viewanimation.DoubleTabScaleActivity"></activity>
    </application>

</manifest>