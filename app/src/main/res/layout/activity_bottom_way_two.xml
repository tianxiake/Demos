<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.bottomnavigation.BottomWayTwoActivity">

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bottom_home_selector_two"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="主页"
            android:textColor="@drawable/bottom_text_color_selector_two" />

        <RadioButton
            android:id="@+id/rb_mind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bottom_mind_selector_two"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="创意"
            android:textColor="@drawable/bottom_text_color_selector_two" />

        <RadioButton
            android:id="@+id/rb_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bottom_money_selector_two"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="市场"
            android:textColor="@drawable/bottom_text_color_selector_two" />

        <RadioButton
            android:id="@+id/rb_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bottom_my_selector_two"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/bottom_text_color_selector_two" />

    </RadioGroup>

    <!--Fragment容器类-->
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rg_group">

    </FrameLayout>

</RelativeLayout>