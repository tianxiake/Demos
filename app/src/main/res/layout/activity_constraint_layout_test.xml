<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.viewgroup.ConstraintLayoutTestActivity">

    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#00FF00"
        android:text="HelloWorld" />

    <TextView
        android:id="@+id/btn_text2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FF0000"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/tv_text1" />

    <TextView
        android:id="@+id/btn_text3"
        android:layout_width="165dp"
        android:layout_height="237dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#0000FF"
        app:layout_constraintBottom_toBottomOf="@+id/tv_text1"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_text2"
        app:layout_constraintTop_toBottomOf="@+id/btn_text2"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>