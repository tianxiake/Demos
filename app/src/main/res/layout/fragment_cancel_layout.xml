<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_cancel_way_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消方式一" />

            <Button
                android:id="@+id/btn_cancel_way_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消方式二" />

            <Button
                android:id="@+id/btn_cancel_way_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消方式三" />

            <Button
                android:id="@+id/btn_cancel_way_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消方式四" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>