<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="floatMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <declare-styleable name="lineView">
        <attr name="lineTextSize" format="dimension" />
        <attr name="maxShowLine" format="integer" />
        <attr name="especialTextColor" format="color" />
        <attr name="especialTextSize" format="dimension" />
        <attr name="lineTextColor" format="color" />
        <attr name="lineHeight" format="dimension" />
        <attr name="lineInterval" format="dimension" />
    </declare-styleable>
</resources>
